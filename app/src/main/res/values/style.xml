<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/lightYellow</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>
    <style name="CustomOutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/secondaryLightColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="CustomTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DefaultMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="shapeAppearance">@style/ShapeAppearance_Radius_10dp</item>
    </style>

    <style name="ShapeAppearance_Radius_10dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="DefaultDarkTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CustomTitleTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DefaultTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="FullDialogTheme" parent="Theme.ToDoList">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>
</resources>