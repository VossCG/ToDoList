<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/shape_radius10_solid_darkblue"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rowContentDate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/04"
        android:textColor="@color/lightBlue"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        />

    <TextView
        android:id="@+id/rowContentTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Title"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        />
    <View
        android:id="@+id/itemContent_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/lightGrey"
        />

    <TextView
        android:id="@+id/rowContent_textView"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Content Body"
        />
    <ImageButton
        android:id="@+id/rowContentDelete_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_delete_24"
        android:layout_gravity="end"
        />
</androidx.appcompat.widget.LinearLayoutCompat>

