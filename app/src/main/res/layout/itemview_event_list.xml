<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/ripple_white_radius10_darkgrey"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    >

    <TextView
        android:id="@+id/item_event_title"
        style="@style/CustomTitleTextViewStyle"
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:drawablePadding="16dp"
        android:gravity="start|center_vertical"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="Event Title"
        app:drawableStartCompat="@drawable/ic_baseline_brightness_1_24"
        />

    <ImageButton
        android:id="@+id/item_event_finish_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_white_oval"
        android:padding="5dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_done_24"
        app:icon="@drawable/ic_baseline_delete_24"
        />

</androidx.appcompat.widget.LinearLayoutCompat>