<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        >

        <TextView
            android:id="@+id/search_item_month_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13æœˆ"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_item_day_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="31"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/rowSearch_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_item_month_tv" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/search_item_header_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius10_solid_darkblue"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            >

            <TextView
                android:id="@+id/search_item_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="5dp"
                android:text="Title"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/search_item_expand_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/darkBlue"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/search_item_expanded_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/search_item_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content will filled out this area"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/search_item_finish_imgBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start|bottom"
                android:layout_marginTop="15dp"
                android:background="@drawable/ripple_white_shape_oval_solid_lightgrey"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_done_24"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>