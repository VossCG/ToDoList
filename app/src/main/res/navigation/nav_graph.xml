<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.voss.todolist.Fragment.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="HomeFragment" >

        <action
            android:id="@+id/action_homeFragment_to_contentFragment"
            app:enterAnim="@anim/slide_in_right_enter"
            app:exitAnim="@anim/slide_out_left_exit"
            app:popEnterAnim="@anim/slide_in_left_pop_enter"
            app:popExitAnim="@anim/slide_out_right_pop_exit"
            app:destination="@id/contentMonthlyFragment" />

    </fragment>
    <fragment
        android:id="@+id/editEventFragment"
        tools:layout="@layout/fragment_editevent"
        android:name="com.voss.todolist.Fragment.EditEventFragment"
        android:label="EditEventFragment" >
        <action
            android:id="@+id/action_editEventFragment_to_homeFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/editEventFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        tools:layout="@layout/fragment_search"
        android:name="com.voss.todolist.Fragment.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_startSearchFragment"
            app:destination="@id/startSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateEventFragment"
        tools:layout="@layout/fragment_update_event"
        android:name="com.voss.todolist.Fragment.UpdateEventFragment"
        android:label="UpdateEventFragment" >
        <argument
            android:name="EventTypes"
            app:argType="com.voss.todolist.Data.EventTypes" />
        <action
            android:id="@+id/action_updateEventFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_updateEventFragment_to_contentFragment"
            app:destination="@id/contentMonthlyFragment"
            app:popUpTo="@id/updateEventFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/contentMonthlyFragment"
        tools:layout="@layout/fragment_contentmonthly"
        android:name="com.voss.todolist.Fragment.ContentMonthlyFragment"
        android:label="ContentFragment" >

        <argument
            android:name="ContentArgs"
            app:argType="com.voss.todolist.Adapter.ArgsToContent" />
        <action
            android:id="@+id/action_contentFragment_to_updateEventFragment"
            app:destination="@id/updateEventFragment" />
        <action
            android:id="@+id/action_contentFragment_to_editEventFragment"
            app:destination="@id/editEventFragment"
            app:popUpTo="@id/editEventFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/browseYearFragment"
        tools:layout="@layout/fragment_browse_year"
        android:name="com.voss.todolist.Fragment.BrowseYearFragment"
        android:label="BrowseYearFragment" >
        <action
            android:id="@+id/action_browseYearFragment_to_browseMonthFragment"
            app:enterAnim="@anim/slide_in_right_enter"
            app:exitAnim="@anim/slide_out_left_exit"
            app:popEnterAnim="@anim/slide_in_left_pop_enter"
            app:popExitAnim="@anim/slide_out_right_pop_exit"

            app:destination="@id/browseMonthFragment" />
    </fragment>
    <fragment
        android:id="@+id/browseMonthFragment"
        android:name="com.voss.todolist.Fragment.BrowseMonthFragment"
        android:label="BrowseMonthFragment"
        tools:layout="@layout/fragment_browse_month">
        <argument
            android:name="year"
            app:argType="integer" />
        <action
            android:id="@+id/action_browseMonthFragment_to_contentFragment"
            app:destination="@id/contentMonthlyFragment" />
    </fragment>
    <fragment
        android:id="@+id/startSearchFragment"
        tools:layout="@layout/fragment_start_search"
        android:name="com.voss.todolist.Fragment.StartSearchFragment"
        android:label="StartSearchFragment" />
</navigation>